import java.util.*;

public class TicTacToe {
	
	public static Scanner in;
	
	//PROGRAM BEGINS	
	public static void main(String[] args) {
		board = new char[5][5];
		symNum = 1;
		gameOver = false;
		in = new Scanner(System.in);
		
		System.out.println("Tic-Tac-Toe");
		System.out.println("");
		System.out.print("What's player1's name? ('x') ");
		name1 = in.nextLine();
		System.out.print("What's player2's name? ('o') ");
		name2 = in.nextLine();
		System.out.println("\t");
		
		
		
		//Setup board
		createBase();

		//Board Print
		printBoard();
		
		
		//Game Start
		while (!gameOver) {
			System.out.print(decideName(turn) + ", What tile you want? ");
			int tChoice = in.nextInt();
			move(tChoice);
			printBoard();
			if (checkWin() && turn == 'x') {
				System.out.println("\n" + decideName('x') + " Wins");
				gameOver = true;
			} else if (checkWin() && turn == 'o') {
				System.out.println("\n" + decideName('o') + " Wins");
				gameOver = true;
			}
		}
		
	}

}
