/**
 * Write a description of class LogMessage here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */

public class LogMessage
{

    private String machineId;
    private String description;

    //constructor to strip message into machineId and description
    public LogMessage(String message){
        int colonLocation = message.indexOf(":");
        machineId = message.substring(0, colonLocation);
        description = message.substring(colonLocation + 1, message.length());
    }

    public boolean containsWord(String keyword){
        int keywordIndex = description.indexOf(keyword); 

        boolean conditionA = false;
        boolean conditionB = false;
        boolean conditionC = false;
        // ConditionA - check if the keyword is in the description
        if(description.indexOf(keyword) == -1){ 
            conditionA = true; 
        }

        // ConditionB - check if the keyword is first in the description or has a space preceeding
        if(description.indexOf(keyword) == 0 ||description.substring(keywordIndex - 1, keywordIndex) == "" ){
            conditionB = true; 
        }

        // CoditionC - check if the keyword is last in the description or has a space succeeding
        if(keywordIndex + keyword.length() == description.length()|| description.substring(keywordIndex+keyword.length(), keywordIndex+keyword.length()+1) == ""){
            conditionC = true; 
        }

        // check if all three conditions exists simulateneously
        if(conditionA && conditionB && conditionC){
            return true; 
        }
        else{
            return false;
        }
    }
}


